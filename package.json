{
  "name": "flaskstarter",
  "version": "0.1.0",
  "description": "FlaskStarter frontend assets",
  "type": "module",
  "scripts": {
    "build:css": "tailwindcss -i ./static/src/css/app.css -o ./static/dist/css/app.css --minify",
    "build:js": "mkdir -p static/dist/js && cp node_modules/alpinejs/dist/cdn.min.js static/dist/js/app.js",
    "build": "mkdir -p static/dist/css static/dist/js && npm run build:css && npm run build:js",
    "watch:css": "tailwindcss -i ./static/src/css/app.css -o ./static/dist/css/app.css --watch",
    "dev": "npm run watch:css"
  },
  "dependencies": {
    "alpinejs": "^3.14.1",
    "@tailwindcss/forms": "^0.5.10",
    "tailwindcss": "^4.1.16",
    "@tailwindcss/cli": "^4.1.5"
  }
}
